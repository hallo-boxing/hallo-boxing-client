<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.EntryGoodActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/entry_good"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/entry_text_view"
                android:text="@string/entry"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center|bottom"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    app:contentPadding="16dp">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/add_image_button"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_add_white_24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    app:fabSize="mini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:contentPadding="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp">
                        <TextView
                            android:layout_weight="3"
                            android:text="@string/input_good_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>
                        <android.support.v7.widget.AppCompatEditText
                            android:layout_weight="1"
                            android:id="@+id/good_name_edit_text"
                            android:textSize="14sp"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp">
                        <TextView
                            android:layout_weight="3"
                            android:text="@string/cat1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>
                        <android.support.v7.widget.AppCompatSpinner
                            android:layout_weight="1"
                            android:id="@+id/good_cat1_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:entries="@array/cat1"
                            android:spinnerMode="dropdown">
                        </android.support.v7.widget.AppCompatSpinner>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp">
                        <TextView
                            android:layout_weight="3"
                            android:text="@string/cat2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>
                        <android.support.v7.widget.AppCompatSpinner
                            android:layout_weight="1"
                            android:id="@+id/good_cat2_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/cat2"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:spinnerMode="dropdown">
                        </android.support.v7.widget.AppCompatSpinner>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp">
                        <TextView
                            android:layout_weight="3"
                            android:text="@string/cat3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>
                        <android.support.v7.widget.AppCompatSpinner
                            android:layout_weight="1"
                            android:id="@+id/good_cat3_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/cat3"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:spinnerMode="dropdown">
                        </android.support.v7.widget.AppCompatSpinner>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:contentPadding="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="3"
                            android:text="@string/rent_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>
                        <android.support.v7.widget.AppCompatEditText
                            android:layout_weight="1"
                            android:id="@+id/rent_price_edit_text"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:gravity="end"
                            android:layout_margin="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="3"
                            android:text="@string/market_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>
                        <android.support.v7.widget.AppCompatEditText
                            android:layout_weight="1"
                            android:id="@+id/market_price_edit_text"
                            android:textSize="14sp"
                            android:gravity="end"
                            android:layout_margin="4dp"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:contentPadding="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/good_description"
                        android:layout_margin="4dp"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/good_desc_edit_text"
                        android:textSize="14sp"
                        android:layout_margin="4dp"
                        android:inputType="textMultiLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>