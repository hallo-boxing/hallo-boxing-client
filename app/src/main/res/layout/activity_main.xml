<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/nav_page_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_container">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/nav_container"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/nav_backgroud_shape"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:id="@+id/nav_explore"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:drawableTop="@drawable/ic_pets_blue_200_24dp"
                android:drawablePadding="2dp"
                android:text="@string/nav_explore"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/nav_order"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:drawableTop="@drawable/ic_assignment_grey_500_24dp"
                android:drawablePadding="2dp"
                android:textSize="12sp"
                android:text="@string/nva_order" />
            <TextView
                android:id="@+id/nav_my"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:drawableTop="@drawable/ic_account_circle_grey_500_24dp"
                android:drawablePadding="2dp"
                android:textSize="12sp"
                android:text="@string/nav_my" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
